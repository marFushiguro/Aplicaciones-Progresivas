rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ðŸ”¥ Un usuario autenticado puede leer y actualizar su propio perfil
    match /users/{uid} {
      allow read, update: if request.auth != null && request.auth.uid == uid;

      // ðŸ”¥ Solo un administrador puede eliminar usuarios
      allow delete: if request.auth.token.role == 'admin';
    }

    // ðŸ”¥ Solo admin puede escribir o eliminar otros documentos
    match /{document=**} {
      allow write, delete: if request.auth.token.role == 'admin';
    }
  }
}

